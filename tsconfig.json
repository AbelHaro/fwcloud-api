{
    "compilerOptions": {
      "outDir": "dist",
      "allowJs": true,
      "lib": [ "es2019" ],
      "target": "es2019",
      "sourceMap": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noImplicitUseStrict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": [
        "node", "mocha"
      ],
    },
    "include": [
      "./src/**/*",
      "./tests/**/*"
    ]
  }