{
    "compilerOptions": {
      "outDir": "dist",
      "allowJs": true,
      "lib": [ "es2018" ],
      "target": "es2018",
      "sourceMap": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noImplicitUseStrict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "./src/**/*"
    ]
  }